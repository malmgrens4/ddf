<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <bean id="errorPage" class="org.codice.ddf.platform.error.servlet.ErrorServlet" init-method="init" />

    <service interface="javax.servlet.Servlet" ref="errorPage">
        <service-properties>
            <entry key="osgi.http.whiteboard.servlet.errorPage">
                <list>
                    <value>400</value>
                    <value>401</value>
                    <value>403</value>
                    <value>404</value>
                    <value>405</value>
                    <value>406</value>
                    <value>500</value>
                    <value>501</value>
                    <value>502</value>
                    <value>503</value>
                    <value>504</value>
                </list>
            </entry>
            <entry key="osgi.http.whiteboard.servlet.name" value="errorPage"/>
        </service-properties>
    </service>

</blueprint>
